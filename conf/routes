# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.LoginController.index

POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout

GET     /signup                     controllers.SignupController.index
POST    /signup                     controllers.SignupController.signup

GET     /chat/notifications         controllers.FriendSocket.socket
GET     /chat                       controllers.ChatApplication.index
GET     /chatFeed/:room             controllers.ChatApplication.chatFeed(room: String)
POST    /chat                       controllers.ChatApplication.postMessage

POST    /upload                     controllers.FileController.upload

->      /api/users                  api.UserRouter
->      /api/friend                 api.FriendshipRouter

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
