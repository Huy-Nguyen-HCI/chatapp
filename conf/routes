# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /login                      controllers.LoginController.index
POST    /login                      controllers.LoginController.login
GET     /logout                     controllers.LoginController.logout

GET     /signup                     controllers.SignupController.index
POST    /signup                     controllers.SignupController.signup

GET     /chat                       controllers.ChatApplication.index
GET     /chatFeed/:room             controllers.ChatApplication.chatFeed(room: String)
POST    /chat                       controllers.ChatApplication.postMessage


GET     /api/user/:name             controllers.api.UserAPI.findByUsername(name: String)
POST    /api/friend/add             controllers.api.FriendshipAPI.sendFriendRequest

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
